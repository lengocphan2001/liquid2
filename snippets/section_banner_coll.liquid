{% assign section = settings[enable] | remove: 'section_' -%}
{% capture sectionTitle -%}{{section}}_title{% endcapture -%}
{% capture sectionUrl -%}{{section}}_url{% endcapture -%}
<div class="section_banner_coll">
	<div class="container card border-0">
		<div class="title_module_main heading-bar mb-3 d-flex align-items-center flex-wrap justify-content-between">
			<h2 class="heading-bar__title">{{settings[sectionTitle]-}}</h2>
			<a href="{{settings[sectionUrl]-}}">Xem tất cả</a>
		</div>
		<div class="row justify-content-md-center text-center justify-content-start">
			{% for i in (1..3) -%}
			{% capture brandenable -%}{{section}}_{{i}}_en{% endcapture -%}
			{% capture brandLink -%}{{section}}_{{i}}_link{% endcapture -%}
			{% capture imagebrand -%}{{section}}_{{i}}.jpg{% endcapture -%}
			{% capture altbrand -%}{{section}}_{{i}}_title{% endcapture -%}
			{% capture width -%}{{section}}_{{i}}_width{% endcapture -%}
			{% capture height -%}{{section}}_{{i}}_height{% endcapture -%}
			{% capture content -%}{{section}}_{{i}}_content{% endcapture -%}
			{% if settings[brandenable] -%}
			{% capture banner_item -%}
			<picture>
				<source media="(max-width: 600px)"
								srcset="{{ imagebrand | img_url:'grande' | asset_url }}">
				<img loading="lazy" class="img-fluid"
						 src="{{imagebrand | asset_url}}" alt="{{altbrand}}"
						 width="{{settings[width]}}"
						 height="{{settings[height]}}"
						 />
			</picture>
			{% endcapture -%}
			<div class="item col-8 col-md-4">
				{% if settings[brandLink] and settings[brandLink] != '' -%}
				<a class="banner" href="{{settings[brandLink]}}" title="{{settings[altbrand]}}"> 
					{{banner_item}}
				</a>
				{% else -%}
				<div class="banner"> 
					{{banner_item}}
				</div>
				{% endif -%}
			</div>
			{% endif -%}
			{% endfor -%}
		</div>
	</div>
</div>