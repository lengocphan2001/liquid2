{%if settings.product_tab_enable -%}
<section class="section sec_tab product-tabs section_product_top ">
	<div class="container">
		<div class='e-tabs'>

			<ul class="tabs tabs-title list-unstyled   mt-2 tabs-group d-flex align-items-center ">
				{%assign count = 0%}
				{%for i in (1..3) -%}
				{%capture tab_enable-%}product_tab{{i}}_enable{%endcapture%}
				{%capture tab_title-%}product_tab{{i}}_title{%endcapture%}
				{%capture tab_content -%}product_tabs-{{i}}{%endcapture%}
				{%if settings[tab_enable]%}
				{%assign count = count | plus: 1%}
				<li class="ega-small tab-link link {%if count == 1%}current{%endif%}" data-tab="{{tab_content}}">
					{{settings[tab_title]}}
				</li>
				{%endif%}
				{%endfor%}
			</ul>
		</div>
		<div class='e-tabs'>
			{%if settings.product_tab1_enable%}
			<div id="product_tabs-1" class="tab-content content_extab current accordion-item ">
				
						<div class="accordion-button">
							{{settings.product_tab1_title}}
							
							 <i class="float-right">
						<svg class="icon">
							<use xlink:href="#icon-arrow"></use>
						</svg>			
					</i>
						</div>
				<div class=" mr-sm-0 ml-sm-0 align-items-start accordion-content">
					<div class="mb-3 mb-sm-0  product-content js-content-wrapper card border-0">
		
						<div id="ega-uti-editable-content" data-platform='haravan' data-id="{{product.id}}" 
							 class="  rte js-product-getcontent product_getcontent pos-relative" style='--content-height: 693px'>
							{% if content != null and content != '' -%}
							<div id="content" class='content js-content'>
								{{content | replace: '<img', '<img loading="lazy"'| replace: '<iframe', '<iframe loading="lazy"'}}
							</div>
							{% else %}
							<div id="content" class='content text-secondary'>
								Nội dung đang được cập nhật
							</div>
							{% endif -%}
						</div>
						<div class="js-seemore ega-pro__seemore text-center pos-relative mt-3">
							<a href="javascript:void(0)" title="Xem thêm" class="btn btn-main btn-pill mx-auto">Xem thêm</a>
						</div>
					</div>

				</div>
			</div>
			{%endif%}
			{%if settings.product_tab2_enable%}
			<div id="product_tabs-2" class="tab-content content_extab accordion-item">
				<div class="accordion-button">
					{{settings.product_tab2_title}}
					 <i class="float-right">
						<svg class="icon">
							<use xlink:href="#icon-arrow"></use>
						</svg>			
					</i>
				</div>
				{%assign page_url = settings.product_tab2_content -%}
				{%assign page = pages[page_url]-%}
				{%assign page_content = page.content  | replace: '<img', '<img loading="lazy"'| replace: '<iframe', '<iframe loading="lazy"'-%}
				<div class="accordion-content">
					{% if page_content  and page_content != '' -%}
					<div class='content'>
						{{page_content}}
					</div>
					{%else-%}
					<div class='content text-secondary'>
						Nội dung đang được cập nhật
					</div>
					{%endif-%}
				</div>
			</div>
			{%endif%}

			{%if settings.product_tab3_enable%}
			<div id="product_tabs-3" class="tab-content content_extab accordion-item">
				<div class="accordion-button">
					{{settings.product_tab3_title}}
					<i class="float-right">
						<svg class="icon">
							<use xlink:href="#icon-arrow"></use>
						</svg>			
					</i>
				</div>
				{%assign page_url = settings.product_tab3_content -%}
				{%assign page = pages[page_url]-%}
				{%assign page_content = page.content  | replace: '<img', '<img loading="lazy"'| replace: '<iframe', '<iframe loading="lazy"'-%}
				<div class="accordion-content">

					{% if page_content  and page_content != '' -%}
					<div class='content'>
						{{page_content}}
					</div>
					{%else-%}
					<div class='content text-secondary'>
						Nội dung đang được cập nhật
					</div>
					{%endif-%}
				</div>
			</div>
			{%endif%}

		


		</div>

	</div>
</section>

<script>
	$(document).ready(()=>{
		$('.accordion-button').click(function(){
			const accordionItem= $(this).parent('.accordion-item')
			const scrollHeight = accordionItem.find('.accordion-content').prop("scrollHeight");
			console.log(scrollHeight)
			accordionItem[0].style.setProperty('--max-height',scrollHeight + 'px')
			accordionItem.toggleClass('current')
		})
	})
</script>

{%endif-%}